table.ui.sortable.small.compact.table.segment(ng-if="!grid")
    thead
        tr
            th.ui.mini(ng-click="setTableSort()" ng-class="setTableClass()") Name
            th.ui.mini(ng-repeat="stat in statsKeys()" ng-if="convertTable[stat]" ng-click="setTableSort(stat)" ng-class="setTableClass(stat)") {{convertTable[stat]}}
    tbody
        tr(ng-repeat="actor in champs  | orderBy:getSortValue:reverseSort |filter:search")
            td {{actor.playerData.playerDisplayName}}
            td(ng-repeat="stat in statsKeys()" ng-if="convertTable[stat]") {{actor.actorStats[stat]}} {{perLevel(stat, actor.actorStats)}}
